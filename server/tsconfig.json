{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2021",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "incremental": true,
        "baseUrl": "./",
        "lib": ["dom", "esnext"],
        "skipLibCheck": true,
        "outDir": "../.serverDist"
    },
    "include": ["./**/*.ts", "../nodeenv.d.ts"]
}
