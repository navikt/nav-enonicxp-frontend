{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "paths": {
            "@/editor-tools/*": ["../../editor-tools/*"],
            "@/nextjs/*": ["../../nextjs/src/*"],
            "@/server/*": ["../../server/*"]
        }
    },
    "include": ["src/**/*.ts, src/**/*.tsx, src/**/*.scss"],
    "references": [
        {
            "path": "../editor-tools"
        },
        {
            "path": "../nextjs"
        },
        {
            "path": "../server"
        }
    ]
}
