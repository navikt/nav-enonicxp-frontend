{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "lib": ["es2023"],
        "moduleResolution": "bundler",
        "module": "esnext",
        "noEmit": true,
        "paths": {
            "@/nextjs/*": ["../../nextjs/*"],
            "@/common/*": ["../../common/*"],
            "@/server/*": ["../../server/*"],
            "@/editor-tools/*": ["../../editor-tools/*"]
        }
    },
    "include": ["src/**/*.ts", "../common/**/*.ts", "../nodeenv.d.ts"]
}
