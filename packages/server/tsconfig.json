{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": ["esnext"],
        "moduleResolution": "node",
        "module": "esnext",
        "baseUrl": "src",
        "noEmit": true,
        "paths": {
            "@/shared/*": ["../../shared/src/*"],
            "@/server/*": ["../../server/src/*"]
        }
    },
    "include": ["nodeenv.d.ts", "src/**/*.ts", "../shared/**/*.ts", "../nodeenv.d.ts"]
}
