{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": ["es2023"],
        "moduleResolution": "bundler",
        "module": "esnext",
        "baseUrl": "src",
        "noEmit": true,
        "paths": {
            "srcCommon/*": ["../../srcCommon/*"]
        }
    },
    "include": ["src/**/*.ts", "../srcCommon/**/*.ts", "../nodeenv.d.ts"]
}
