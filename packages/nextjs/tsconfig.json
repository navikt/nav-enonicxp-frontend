{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/common/*": ["../../common/*"],
            "@/server/*": ["../../server/*"],
            "@/editor-tools/*": ["../../editor-tools/*"]
        },
        "plugins": [
            {
                "options": {
                    "rendererOptions": {
                        "sass": {
                            "includePaths": ["./src"]
                        }
                    }
                }
            }
        ]
    },
    "include": ["src/**/*.ts, src/**/*.tsx, src/**/*.scss"],
    "references": [
        {
            "path": "../common"
        },
        {
            "path": "../editor-tools"
        },
        {
            "path": "../server"
        }
    ]
}
