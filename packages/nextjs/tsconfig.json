{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/common/*": ["../../common/src/*"],
            "@/editor-tools/*": ["../../editor-tools/src/*"]
        },
        "allowJs": true,
        "incremental": true,
        "noEmit": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "classnameTransform": "dashesOnly",
                    "rendererOptions": {
                        "sass": {
                            "includePaths": ["./src"]
                        }
                    }
                }
            }
        ]
    },
    "include": ["src", "../../nodeenv.d.ts"],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "../common"
        },
        {
            "path": "../editor-tools"
        }
    ]
}
